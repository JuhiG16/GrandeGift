@model HamperUpdateViewModel
@{
    var PhotoPath = "/img/" + (Model.PhotoPath ?? "NoImage.jpg");
}

<form enctype="multipart/form-data" asp-controller="Hamper" asp-action="Update" method="post">
    <div class="form-group">
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <input asp-for="Details" class="form-control" />
        <span asp-validation-for="Details"></span>
    </div>
    <div class="form-group">
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Cats, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <select asp-for="Status" asp-items="Html.GetEnumSelectList(typeof(Status))" class="form-control"></select>
    </div>
    <div class="form-group">
        <div class="custom-file">
            <input class="custom-file-input" id="customfile" asp-for="Photo" />
            <label class="custom-file-label" for="customFile">Choose File</label>
        </div>
    </div>
    <div class="form-group">
        <input asp-for="PhotoPath" class="form-control" hidden/>
        <span asp-validation-for="PhotoPath"></span>
    </div>
    <div>
        <img src="@PhotoPath" />
    </div>
    <button class="btn btn-primary">Update</button>
    <button class="btn btn-primary">@Html.ActionLink("Cancel", "Index", "Hamper", null, new { @class = "text-white" })</button>
</form>

