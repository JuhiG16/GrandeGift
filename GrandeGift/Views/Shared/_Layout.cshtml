<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />



</head>
<body class="container">
    <div class="row mt-1 bg-primary">

        <div class="col-1 mr-1">
            <img class="img-fluid" src="~/img/logo.png" />
        </div>

        <div class="col-8 border border-primary bg-primary">
            <nav class="navbar navbar-expand-lg navbar-light bg-primary">
                <a class="navbar-brand text-dark" href="#">Grande Gift</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">link1</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">link2</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">link3</a>
                        </li>
                    </ul>
                </div>
            </nav>
            </div>
            <div class="col-2">
                @if (User.Identity.IsAuthenticated)
                {
                    <div>
                        Welcome @User.Identity.Name
                    </div>
                    <div>
                        @Html.ActionLink("LogOut", "LogOut", "Account",null, new { @class="text-white"})
                    </div>
                }
            </div>
        </div>
    
    <div>
        @*<div>
            @if(User.Identity.IsAuthenticated)
            {
