<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />



</head>
<body class="container">
    <div class="row mt-1 bg-info">

        <div class="col-1 mr-1">
            <img class="img-fluid" src="~/img/logo.png" />
        </div>
      <div class="col-5"></div>
        <div class="col-3 border border-info bg-info mr-5">
            <nav class="navbar navbar-expand-lg navbar-light bg-info">
                <a class="navbar-brand text-dark" href="#">Grande Gift</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">link1</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">link2</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">link3</a>
                        </li>
                    </ul>
                </div>
            </nav>
            </div>
            <div class="col-2 ml-3">
                @if (User.Identity.IsAuthenticated)
                {
                    <span>
                        Welcome @User.Identity.Name
                    </span>
                    <div>
                        @Html.ActionLink("LogOut", "LogOut", "Account",null, new { @class="text-white"})
                    </div>
                }
            </div>
        </div>
    
    <div class="mt-5">
         @RenderBody()
    </div>
    <footer class="row bg-primary mt-4">
        <p>Footer GiftHempers</p>
    </footer>

    @if(IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required:true)
    }

    <script src="~/node_modules/jquery/dist/jquery.js"></script>
    <script src="~/node_modules/popper.js/dist/umd/popper.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>

</body>
</html>
