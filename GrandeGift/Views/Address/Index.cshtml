@model IEnumerable<AddressIndexViewModel>
@Html.ActionLink("add new address", "Create", "Address")
<table class="table table-primary">
    <thead>
        <tr>
            <th>Id</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Details</td>
            </tr>
        }
    </tbody>
</table>